<%- include('partials/header', { title: 'Ver Usuario' }) %>

<!-- Content wrapper -->
<div class="content-wrapper">
  <!-- Content -->
  <div class="container-xxl flex-grow-1 container-p-y">
    <div class="app-usuario">
      <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-6 row-gap-4">
        <div class="d-flex flex-column justify-content-center">
          <h4 class="mb-1">Detalles del Usuario</h4>
          <p class="mb-0">Información del usuario seleccionado.</p>
        </div>
        <div class="d-flex align-content-center flex-wrap gap-4">
          <a href="/usuarios" class="btn btn-label-secondary">Regresar</a>
          <a href="javascript:void(0);" class="btn btn-primary" onclick="editProduct('<%= user.id %>')">Editar</a>
        </div>
      </div>

      <!-- Mensaje de error -->
      <% if (error) { %>
        <div class="alert alert-danger">
          <%= error %>
        </div>
      <% } %>

      <div class="row">
        <div class="col-12 col-lg-12">
          <div class="card mb-6">
            <div class="card-header">
              <h5 class="card-title mb-0">Información del Usuario</h5>
            </div>
            <div class="card-body">
              <div class="row mb-6">
                <div class="col">
                  <label class="form-label">Nombre</label>
                  <p class="form-control-plaintext"><%= user.nombre %></p>
                </div>
                <div class="col">
                  <label class="form-label">Apellido</label>
                  <p class="form-control-plaintext"><%= user.apellido || 'No disponible' %></p>
                </div>
              </div>
              <div class="mb-6">
                <label class="form-label">Departamento</label>
                <p class="form-control-plaintext"><%= user.depto %></p>
              </div>
              <div class="row mb-6">
                <div class="col">
                  <label class="form-label">Correo</label>
                  <p class="form-control-plaintext"><%= user.correo %></p>
                </div>
                <div class="col">
                  <label class="form-label">Estado</label>
                  <p class="form-control-plaintext 
                    <%= user.activo ? 'text-success' : 'text-danger' %>">
                    <%= user.activo ? 'Activo' : 'Inactivo' %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer-text') %>
  <div class="content-backdrop fade"></div>
</div>
<%- include('partials/footer') %>

<script>
  function suspendUser(userId) {
    if (confirm('¿Estás seguro de que quieres suspender este usuario?')) {
      fetch(`/usuario-suspender/${userId}`, {
        method: 'POST',
      })
      .then(response => {
        if (response.ok) {
          alert('Usuario suspendido exitosamente.');
          window.location.href = '/usuarios'; // Redirigir a la lista de usuarios
        } else {
          alert('Error al suspender el usuario.');
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Error al suspender el usuario.');
      });
    }
  }

  function encodeId(id) {
    return btoa(id); // Codificación en Base64
  }

  function editProduct(uuid) {
    const id = encodeId(uuid);
    window.location.href = '/usuario-editar/' + id;
  }
</script>
