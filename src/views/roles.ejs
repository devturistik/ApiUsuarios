<%- include('partials/header', { title: 'Roles' }) %>
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
      <!-- Product List Widget -->
      <div class="card mb-6">
        <div class="card-widget-separator-wrapper">
          <div class="card-body card-widget-separator">
            <div class="row gy-4 gy-sm-1">
              <div class="col-sm-6 col-lg-4">
                <div class="d-flex justify-content-between align-items-start card-widget-1 border-end pb-4 pb-sm-0">
                  <div>
                    <p class="mb-1">Total Roles</p>
                    <h4 id="total-roles" class="mb-1">...</h4>
                    <p class="mb-0"><span class="me-2"></span></p>
                  </div>
                  <span class="avatar me-sm-6">
                    <span class="avatar-initial rounded"><i class="ti-28px ti ti-settings text-heading"></i></span>
                  </span>
                </div>
                <hr class="d-none d-sm-block d-lg-none me-6" />
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Mensaje de error -->
    <% if (typeof error !== "undefined" && error) { %>
      <div class="alert alert-danger">
        <%= error || "" %>
      </div>
    <% } %>

    <!-- Mensaje de Ã©xito -->
    <% if (typeof success_msg !== "undefined" && success_msg) { %>
      <div class="alert alert-success">
        <%= success_msg || "" %>
      </div>
    <% } %>

      <!-- Product List Table -->
      <div class="card">
        <div class="card-header">
          <h5 class="card-title">Listado de Roles</h5>
          <!-- <div class="d-flex justify-content-between align-items-center row pt-4 gap-6 gap-md-0">
            <div class="col-md-4" id="filter-activo-container"></div>
            <div class="col-md-4" id="filter-departamento-container"></div>
          </div> -->
        </div>

        <div class="card-datatable table-responsive">
          <table id="rolesTable" class="datatables-products table">
            <thead class="border-top">
              <tr>
                <th>id</th>
                <th>id</th>
                <th>Nombre</th>
                <th>Nivel de jerarquia</th>
                <th>Acciones</th>
              </tr>
            </thead>
          </table>
        </div>
      </div>
    </div>
    <!-- / Content -->

    <%- include('partials/footer-text')%>
    <!-- / Footer -->

    <div class="content-backdrop fade"></div>
  </div>
<%- include('partials/footer') %>
<script src="/assets/js/app-turistik-roles-list.js"></script>
</body>
</html>
